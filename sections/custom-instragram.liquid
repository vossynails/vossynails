{% schema %}
  {
    "name": "Instagram",
    "settings": [
      {
        "type": "text",
        "id": "section-titlle_ins",
        "label": "Heading",
        "default": "gift card headings"
      },
      {
        "type": "richtext",
        "id": "paragraph_ins",
        "label": "Description"
      },
      {
        "type": "checkbox",
        "id": "simple_box",
        "label": "Equal width boxes"
      },
            {
        "type": "color",
        "id": "background",
        "label": "Background",
        "default": "#F0E6E2"
      },
      {
        "type": "color",
        "id": "txt_clr",
        "label": "Heading color",
        "default": "#000000"
      },
     {
      "type": "range",
      "id": "border-red",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Corner radius around image",
      "default": 10
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
    ],
    "blocks":[
      {
        "type":"featured-image",
        "name":"Featured Image",
        "limit":8,
        "settings":[
          {
            "type": "image_picker",
            "id": "image_feature",
            "label": "Image"
          },
          {
          "type": "url",
          "id": "button_link_ins",
          "label": "Instragran link"
        }

        ]
      },
      {
        "type":"navigate-image",
        "name":"Navigate Images",
        "limit":8,
        "settings":[
          {
            "type": "image_picker",
            "id": "images_navigate",
            "label": "Image"
          },
          {
          "type": "url",
          "id": "button_link_ins1",
          "label": "Instragran link"
        }
        ]
      }
    ],
    "presets":[
      {
        "name":"Custom instagram"
      }
    ]
  }
{% endschema %}